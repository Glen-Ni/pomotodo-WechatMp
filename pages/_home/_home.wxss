
.home-contianer {
  height:100vh;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  position: relative;
}

.tomato-wrapper{
  flex:1;
  margin-top: 66rpx;
  padding: 0 28rpx;
}

.tomato-wrapper .tomato {
  background: #eef7f6;
  border-radius: 2rpx;
  box-shadow: 0 2px 8px 0px rgba(0,0,0,0.10);
  height: 473rpx;
  display: flex;
  flex-direction:column;
  justify-content:center;
}

.createButton {
  position: absolute;
  top:580px;
  left: 50%;
  transform: translateX(-50%)
}

.todoList{
  padding: 13rpx 30rpx;
  box-sizing: border-box;
}

.todoList .item {
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0,0,0,0.10);
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  margin: 10rpx 0;
}

.todoList .item .select{
  border-radius: 50%;
  border: 4rpx solid #FE996F;
  margin-right: 10px;
  width: 20rpx;
  height: 20rpx;
}